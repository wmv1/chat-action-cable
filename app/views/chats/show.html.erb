<div align="center" class="container">
  <h1 class="title">Bate Papo</h1>
  <div id="messages">
  <% @messages.each do |m| %>

   <div class="message">
      <p>
      <%= m.user.name %>:
      <%= m.content %>
      <%if current_user == m.user%>
      <%= link_to 'Remover', message_path(m), method: :delete %> 
      <% end %>
      </p>
   </div>
  <%end%>
  </div>
 
  <form>
    <input type="text" data-behavior="chat_speaker" placeholder=" Diga alguma coisa :) ">
  </form>
</div>
